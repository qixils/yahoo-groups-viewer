@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  font-family: 'Inter', Arial, -apple-system, BlinkMacSystemFont, "Segoe UI",
  Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
}

:root, html, body, #svelte {
  height: 100%;
}

