input,
button {
  font-size: inherit;
  font-family: inherit;
}

button:focus:not(:focus-visible) {
  outline: none;
}

.yahoo {
  @apply text-purple-900 dark:text-fuchsia-500 font-bold;
}

a:not(.no-url) {
  @apply text-blue-600 underline;
}

.yahoo-header {
  @apply yahoo text-4xl md:text-5xl;
}
